- if @employee.errors.any?
  #error_explanation
    %h2
      = pluralize(@employee.errors.count, "error")
      prohibited this user from being saved:
    %ul
      - @employee.errors.full_messages.each do |msg|
        %li= msg

.field
  = f.label :nome
  = f.text_field :first_name
  = f.label :sobrenome
  = f.text_field :last_name
.field
  = f.label :username
  = f.text_field :username

.field
  = f.label :email
  = f.text_field :email

- if @current_user.manager?
  = render partial: 'address', locals: { f: f }

- if @current_user.manager? == false && edit == true
  .field
    = f.label :password
    = f.password_field :plain_password

.button
  = f.submit :Salvar, class: 'btn btn-info '
  = link_to 'Voltar', root_path, class: 'btn btn-inverse'