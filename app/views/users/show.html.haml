.modal-header.clearfix
  .block
    .pull-left
      %h3= @employee.name
      = @employee.full_address
      %br
      = @employee.email
  .block
    .pull-right
      .btn-toolbar
        = link_to 'Edit', edit_user_path(@employee.username), class: 'btn btn-small btn-inverse'
        = link_to 'Delete this user', user_path, method: :delete, data: { confirm: 'Do you really want to delete this employee?' }, class: 'btn btn-small btn-inverse'

%br

- if @employee.checkings.present?
  = form_for @employee, url: user_path(@employee.username) do |f|
    %h4 Unseen Checkings
    .container
      %table.table.table-bordered
        %tr
          %td
            %h5 Checked In
          %td
            %h5 Checked Out
          %td
            %h5 Value
          %td
            %h5 Approved?
          = f.fields_for :checkings, @employee.checkings.not_approveds do |c, d|
            %tr
              %td
                %p= c.object.time(c.object.checked_in_at)
                %p= c.object.date(c.object.checked_in_at)
              %td
                %p= c.object.time(c.object.checked_out_at)
                %p= c.object.date(c.object.checked_out_at)
              %td
                = c.object.value
              %td
                = c.check_box :approved

    = f.submit 'Approve', class: 'btn btn-info pull-right'