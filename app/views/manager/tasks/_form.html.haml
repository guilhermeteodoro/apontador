%fieldset
  .field
    = f.label :name
    = f.text_field :name
    = error_for task, :name
  .field
    = f.label :user_id
    - if @task.new_record?
      = f.collection_select :user_id, User.with_no_task(@current_user.company_id), :id, :name, prompt: true
      = error_for task, :user_id
    - else
      %p= @task.user.name

%fieldset
  .field
    = f.label :description
    = f.text_area :description
    = error_for task, :description

= f.submit :Salvar