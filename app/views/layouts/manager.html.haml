!!! html5
%html
  %head
    %title Checker
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
  %body
    #wrap
      .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container
            = link_to 'Checker', root_path, class: "brand logo-font"
            %ul
              .nav.pull-right
                %li#accountmenu.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                    Configurações
                    .caret
                  %ul.dropdown-menu
                    %li.nav-header Operações Perfil
                    %li.divider
                    %li= link_to 'Editar Perfil', edit_manager_user_path
                    %li= link_to 'Deletar Conta', manager_user_path, method: :delete, data: { confirm: "Essa ação irá deletar também seus funcionários e sua empresa. Você tem certeza que deseja fazer isso?" }
                %li= link_to 'Logout', logout_path

      .container
        = yield

      #push

    #footer
      .container
        %p.muted.credits.text-center
          Desenvolvido por Guilherme Teodoro no #{link_to 'ClickJogos', 'http://www.clickjogos.com.br'} Bootcamp