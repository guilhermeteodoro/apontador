!!! html5
%html
  %head
    %title Checker
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}

  %body
    #wrap
      = render partial: 'layouts/header'

      #main-content
        = yield

      #push

    %footer#footer
      %p Desenvolvido por Guilherme Teodoro no #{link_to 'ClickJogos', 'http://www.clickjogos.com.br'} Bootcamp