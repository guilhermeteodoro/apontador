.fluid-content
  %h1.center #{@current_user.name}
  %br
  %h2.center Seu gerente te inscreveu numa tarefa:
  %br
  %p.center.underline #{@task.name}
  %br
  %p.center #{@task.description}
  %br
  %h3.center Se deseja aceitar preencha os campos abaixo:
  %br

  .base-form
    = form_for @task, url: task_update_path(@task.to_param) do |f|
      %fieldset
        .field
          = f.label :duration
          = f.text_field :duration, placeholder: "2:50"
          = error_for @task, :duration
        .field
          = f.label :hour_value
          = f.text_field :hour_value, placeholder: "22.50"
          = error_for @task, :hour_value

        = f.submit "Aceito com estas condições"

    / = link_to "Recusar esta tarefa", refuse_task_path(@task.to_param), method: :put
